{
  "name": "api-nubble",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "docs": "node ace docs:generate",
    "docker:db": "docker run -d --name nubble-database -p 5432:5432 -e POSTGRES_PASSWORD=123456 postgres",
    "reset": "node ace migration:rollback && node ace migration:run && node ace db:seed",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "docker": "node ace migration:run && node ace db:seed && node server.js"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es6",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@faker-js/faker": "^8.0.2",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.2.2",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "openapi-types": "^12.1.0",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5",
    "yarn-upgrade-all": "^0.7.2",
    "youch": "^3.2.2",
    "youch-terminal": "^2.1.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.3.0",
    "@adonisjs/repl": "^3.1.11",
    "adonis-autoswagger": "^1.8.1",
    "date-fns": "^2.30.0",
    "luxon": "^3.2.1",
    "pg": "^8.9.0",
    "phc-argon2": "^1.1.4",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.4",
    "source-map-support": "^0.5.21",
    "tsyringe": "^4.8.0"
  }
}
